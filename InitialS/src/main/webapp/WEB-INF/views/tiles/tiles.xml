<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
<tiles-definitions>   
 
	<definition name="tilesbase"  
	    template="/WEB-INF/views/tiles/human/default.jsp">   
	    <put-attribute name="title" value="" />        
	    <put-attribute name="header" value="/WEB-INF/views/tiles/human/header.jsp" />   
	    <put-attribute name="menu" value="/WEB-INF/views/tiles/human/menu.jsp" />      
	    <put-attribute name="body" value="" />       
	    <put-attribute name="footer" value="/WEB-INF/views/tiles/human/footer.jsp" />   
	</definition>      
	 
	 <!-- 컨트롤러에서 리턴해 주는 뷰이름,본예제는 hello  -->
	<definition name="home" extends="tilesbase">    
	    <put-attribute name="title" value="Hello, Tiles World!" />     
	    <put-attribute name="body" value="/WEB-INF/views/home.jsp" />    
	</definition>  
	
	<definition name="result/*" extends="tilesbase">    
	    <put-attribute name="title" value="Hello, Tiles World!" />     
	    <put-attribute name="body" value="/WEB-INF/views/result/{1}.jsp" />    
	</definition>  
 
</tiles-definitions>
